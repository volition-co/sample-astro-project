---
import astroLogo from '../assets/astro.svg';
---

<div id="container">
    <div id="retro-grid"></div>
    <div id="retro-background"></div>
    
    <main>
        <section id="hero">
            <div id="logo-container">
                <a href="https://astro.build">
                    <img src={astroLogo.src} width="115" height="48" alt="Astro Homepage" />
                </a>
                <div id="logo-glow"></div>
            </div>
            
            <h1 class="retro-title">
                <span class="line-1">WELCOME TO THE</span>
                <span class="line-2">ASTRO ZONE</span>
            </h1>
            
            <p class="retro-subtitle">
                Boot up your development experience with <code>src/pages</code>
            </p>
            
            <section id="links">
                <a class="retro-button primary" href="https://docs.astro.build">
                    <span>▶ READ DOCS</span>
                </a>
                <a class="retro-button secondary" href="https://astro.build/chat">
                    <span>♦ JOIN DISCORD</span>
                </a>
            </section>
        </section>
    </main>

    <div id="terminal-window">
        <div class="terminal-header">
            <div class="terminal-buttons">
                <span class="button red"></span>
                <span class="button yellow"></span>
                <span class="button green"></span>
            </div>
            <span class="terminal-title">ASTRO_5.exe</span>
        </div>
        <div class="terminal-content">
            <p class="terminal-line">
                <span class="prompt">&gt;</span> What's New in Astro 5.0?
            </p>
            <p class="terminal-line">
                <span class="cursor">█</span> Content layers, server islands, and more...
            </p>
            <a href="https://astro.build/blog/astro-5/" class="terminal-link">
                <span class="prompt">&gt;</span> CLICK_TO_LEARN_MORE.bat
            </a>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Courier+Prime:wght@400;700&display=swap');

    #container {
        font-family: 'Orbitron', 'Courier Prime', monospace;
        height: 100%;
        background: #0a0a0f;
        color: #00ffff;
        overflow: hidden;
        position: relative;
    }

    /* Retro grid background */
    #retro-grid {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            linear-gradient(90deg, transparent 98%, #ff0080 100%) 0 0,
            linear-gradient(180deg, transparent 98%, #ff0080 100%) 0 0;
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: 1;
        animation: gridPulse 4s ease-in-out infinite;
    }

    /* Animated background gradient */
    #retro-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(circle at 25% 25%, #ff0080 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, #00ffff 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, #8000ff 0%, transparent 70%);
        opacity: 0.1;
        z-index: 2;
        animation: backgroundShift 8s linear infinite;
    }

    main {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 10;
    }

    #hero {
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        padding: 32px;
        text-align: center;
        position: relative;
    }

    #logo-container {
        position: relative;
        margin-bottom: 2rem;
    }

    #logo-container img {
        filter: hue-rotate(180deg) saturate(2) brightness(1.5);
        animation: logoGlow 2s ease-in-out infinite alternate;
    }

    #logo-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 150px;
        height: 80px;
        background: radial-gradient(ellipse, #00ffff 0%, transparent 70%);
        opacity: 0.3;
        animation: glowPulse 3s ease-in-out infinite;
        z-index: -1;
    }

    .retro-title {
        font-family: 'Orbitron', monospace;
        font-weight: 900;
        font-size: 3.5rem;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        line-height: 1.2;
        text-shadow: 
            0 0 10px #00ffff,
            0 0 20px #00ffff,
            0 0 40px #00ffff;
        animation: titleFlicker 3s linear infinite;
    }

    .retro-title .line-1 {
        display: block;
        color: #ff0080;
        font-size: 2rem;
        margin-bottom: 0.2em;
    }

    .retro-title .line-2 {
        display: block;
        color: #00ffff;
        text-shadow: 
            0 0 10px #00ffff,
            0 0 20px #00ffff,
            0 0 40px #00ffff;
    }

    .retro-subtitle {
        font-family: 'Courier Prime', monospace;
        font-size: 1.2rem;
        color: #8000ff;
        margin: 2rem 0;
        text-shadow: 0 0 5px #8000ff;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    code {
        background: linear-gradient(45deg, #ff0080, #00ffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        text-shadow: none;
    }

    #links {
        display: flex;
        gap: 2rem;
        margin-top: 3rem;
    }

    .retro-button {
        font-family: 'Orbitron', monospace;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        padding: 1rem 2rem;
        border: 2px solid;
        background: transparent;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        letter-spacing: 0.1em;
    }

    .retro-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .retro-button:hover::before {
        left: 100%;
    }

    .retro-button.primary {
        color: #00ffff;
        border-color: #00ffff;
        box-shadow: 
            0 0 10px #00ffff,
            inset 0 0 10px rgba(0, 255, 255, 0.1);
    }

    .retro-button.primary:hover {
        background: rgba(0, 255, 255, 0.1);
        box-shadow: 
            0 0 20px #00ffff,
            inset 0 0 20px rgba(0, 255, 255, 0.2);
        transform: scale(1.05);
    }

    .retro-button.secondary {
        color: #ff0080;
        border-color: #ff0080;
        box-shadow: 
            0 0 10px #ff0080,
            inset 0 0 10px rgba(255, 0, 128, 0.1);
    }

    .retro-button.secondary:hover {
        background: rgba(255, 0, 128, 0.1);
        box-shadow: 
            0 0 20px #ff0080,
            inset 0 0 20px rgba(255, 0, 128, 0.2);
        transform: scale(1.05);
    }

    /* Terminal window styling */
    #terminal-window {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 400px;
        background: rgba(0, 0, 0, 0.9);
        border: 1px solid #00ffff;
        border-radius: 8px;
        box-shadow: 
            0 0 20px rgba(0, 255, 255, 0.3),
            inset 0 0 20px rgba(0, 255, 255, 0.1);
        z-index: 20;
    }

    .terminal-header {
        background: linear-gradient(135deg, #1a1a2e, #16213e);
        padding: 0.5rem 1rem;
        border-bottom: 1px solid #00ffff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px 8px 0 0;
    }

    .terminal-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .terminal-buttons .button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .terminal-buttons .button.red {
        background: #ff5f56;
    }

    .terminal-buttons .button.yellow {
        background: #ffbd2e;
    }

    .terminal-buttons .button.green {
        background: #27ca3f;
    }

    .terminal-title {
        font-family: 'Courier Prime', monospace;
        color: #00ffff;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .terminal-content {
        padding: 1rem;
        font-family: 'Courier Prime', monospace;
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .terminal-line {
        margin: 0.5rem 0;
        color: #00ff00;
    }

    .prompt {
        color: #ff0080;
        margin-right: 0.5rem;
    }

    .cursor {
        color: #00ffff;
        animation: cursorBlink 1s infinite;
    }

    .terminal-link {
        color: #00ffff;
        text-decoration: none;
        display: block;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

    .terminal-link:hover {
        color: #ff0080;
        text-shadow: 0 0 5px #ff0080;
    }

    /* Animations */
    @keyframes gridPulse {
        0%, 100% { opacity: 0.1; }
        50% { opacity: 0.2; }
    }

    @keyframes backgroundShift {
        0% { transform: rotate(0deg) scale(1); }
        33% { transform: rotate(120deg) scale(1.1); }
        66% { transform: rotate(240deg) scale(0.9); }
        100% { transform: rotate(360deg) scale(1); }
    }

    @keyframes logoGlow {
        from { filter: hue-rotate(180deg) saturate(2) brightness(1.5) drop-shadow(0 0 5px #00ffff); }
        to { filter: hue-rotate(180deg) saturate(2) brightness(2) drop-shadow(0 0 15px #00ffff); }
    }

    @keyframes glowPulse {
        0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
        50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.2); }
    }

    @keyframes titleFlicker {
        0%, 100% { opacity: 1; }
        98% { opacity: 1; }
        99% { opacity: 0.8; }
    }

    @keyframes cursorBlink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0; }
    }

    /* Responsive design */
    @media screen and (max-width: 768px) {
        .retro-title {
            font-size: 2.5rem;
        }

        .retro-title .line-1 {
            font-size: 1.5rem;
        }

        .retro-subtitle {
            font-size: 1rem;
        }

        #links {
            flex-direction: column;
            gap: 1rem;
        }

        .retro-button {
            padding: 0.8rem 1.5rem;
        }

        #terminal-window {
            right: 1rem;
            left: 1rem;
            width: auto;
            bottom: 1rem;
        }

        #hero {
            padding: 1rem;
        }
    }

    @media screen and (max-height: 600px) {
        #terminal-window {
            display: none;
        }

        .retro-title {
            font-size: 2rem;
        }

        .retro-title .line-1 {
            font-size: 1.2rem;
        }
    }
</style>
